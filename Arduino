#include<Servo.h>

Servo s1;

const int soundPin = 2;
const int soundPin2 = 8;
// Assign sound sensor output to digital pin 2
bool clapDetected = false; // Variable to store whether a clap has been detected

void setup() {
  pinMode(soundPin, INPUT);
  pinMode(soundPin2, INPUT);
  // Configure sound sensor pin as input
  Serial.begin(9600); 
  // Initialize serial communication at 9600 baud
  s1.attach(9);
  
}



void loop() 
{
   s1.write(0);
  if (digitalRead(soundPin) == HIGH && !clapDetected) 
  {
    clapDetected = true;  
    // Set flag to true when sound is detected
    int x=9;
    Serial.println("Clap detected!");  // Display message on the serial monitor
    if (x=9);
    {   
              s1.write(90);
              delay(2000);
    }
    delay(1000);                   // Wait for 1 second before detecting another clap
  }
  else if (digitalRead(soundPin2) == HIGH && !clapDetected)
  {
    clapDetected = true;  
    // Set flag to true when sound is detected
    int x=9;
    Serial.println("Clap detected! and Sensor 2 working");  // Display message on the serial monitor
    if (x=9);
    {   
              s1.write(180);
              delay(2000);
    }
  
  }  else if (digitalRead(soundPin) == LOW)
{
    clapDetected = false;          // Reset flag when sound level drops
}
}#include<Servo.h>

